<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.glance.guolindev">

    <application>
        <activity
            android:name=".ui.db.DBActivity"
            android:label="Glance"
            android:exported="false"
            android:theme="@style/GlanceDBActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.table.TableActivity"
            android:exported="false"
            android:theme="@style/GlanceTableActivityTheme" />

        <activity android:name=".ui.data.DataActivity"
            android:exported="false"
            android:theme="@style/GlanceDataActivityTheme" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.glance.guolindev.initializer.GlanceInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>